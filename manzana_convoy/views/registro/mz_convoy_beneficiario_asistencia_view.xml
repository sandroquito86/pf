<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form -->
    <record id="view_mz_convoy_beneficiario_asistencia_form" model="ir.ui.view">
        <field name="name">mz.convoy.beneficiario.asistencia.form</field>
        <field name="model">mz_convoy.beneficiario_wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="num_documento" required="1"/>
                            <field name="nombres" required="1"/>
                            <field name="apellidos" required="1"/>
                            <field name="es_extranjero"/>
                            <field name="pais"/>
                            <field name="celular"/>
                            <field name="operadora_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="fecha_nacimiento"/>
                            <field name="edad"/>
                            <field name="estado_civil_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="genero_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Ubicación">
                            <field name="canton"/>
                            <field name="parroquia"/>
                            <field name="direccion"/>
                        </group>
                        <group string="Información Adicional">
                            <field name="email"/>
                            <field name="tiene_discapacidad"/>
                            <field name="recibe_bono"/>
                        </group>
                    </group>
                    <field name="convoy_id" invisible="1"/>
                    <field name="tipo_registro" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="view_mz_convoy_beneficiario_asistencia_tree" model="ir.ui.view">
        <field name="name">mz.convoy.beneficiario.asistencia.tree</field>
        <field name="model">mz_convoy.beneficiario_wizard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="num_documento"/>
                <field name="nombres"/>
                <field name="apellidos"/>
                <field name="edad"/>
                <field name="genero_id"/>
                <field name="estado_civil_id"/>
                <field name="celular"/>
                <field name="tiene_discapacidad"/>
                <field name="recibe_bono"/>
            </tree>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_mz_convoy_beneficiario_asistencia_search" model="ir.ui.view">
        <field name="name">mz.convoy.beneficiario.asistencia.search</field>
        <field name="model">mz_convoy.beneficiario_wizard</field>
        <field name="arch" type="xml">
            <search>
                <field name="num_documento"/>
                <field name="nombres"/>
                <field name="apellidos"/>
                <field name="canton"/>
                <field name="parroquia"/>
                <separator/>
                <filter string="Con Discapacidad" name="discapacidad" domain="[('tiene_discapacidad', '=', True)]"/>
                <filter string="Recibe Bono" name="bono" domain="[('recibe_bono', '=', True)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Género" name="gender" context="{'group_by': 'genero_id'}"/>
                    <filter string="Estado Civil" name="estado_civil" context="{'group_by': 'estado_civil_id'}"/>
                    <filter string="Cantón" name="canton" context="{'group_by': 'canton'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mz_convoy_beneficiario_asistencia" model="ir.actions.act_window">
        <field name="name">Registro por Asistencia</field>
        <field name="res_model">mz_convoy.beneficiario_wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_mz_convoy_beneficiario_asistencia_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_mz_convoy_beneficiario_asistencia_form')})
    ]"/>
        <field name="context">{
        'default_convoy_id': active_id,
        'default_tipo_registro': 'asistencia'
    }</field>
        <field name="domain">[
        ('convoy_id', '=', active_id),
        ('tipo_registro', '=', 'asistencia')
    ]</field>
    </record>


</odoo>