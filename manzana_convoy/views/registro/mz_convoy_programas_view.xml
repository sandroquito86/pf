<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_mz_mz_convoy_form" model="ir.ui.view">
        <field name="name">mz.convoy.form</field>
        <field name="model">mz.convoy</field>
        <field name="arch" type="xml">
            <form string="Programas">
                <header>
                    <button name="action_activar" string="Activar Programa" type="object" class="btn-primary" invisible="active"/>
                    <button name="action_publish" string="Publicar Programa" type="object" class="btn-primary" invisible="not mostrar_boton_publicar"/>
                    <button name="action_unpublish_wizard" string="Retirar Publicación" type="object" class="btn-secondary" invisible="not mostrar_bot_retirar_public"/>
                </header>
                <sheet>
                    <div class="row justify-content-between position-relative w-100 m-0 mb-2">
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Evento (CONVOY)"/>
                            </h1>
                        </div>
                        <div class="o_employee_avatar m-0 p-0">
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                        </div>
                    </div>
                    <group string="Informacion del CONVOY">
                        <field name="institucion_anfitriona"/>
                        <field name="formato_evento"/>
                        <field name="director_coordinador"/>
                    </group>
                    <notebook>
                        <page string="Sucursal">
                            <group>
                                <group>
                                    <field name="sigla"/>
                                    <field name="sucursal_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                    <field name="provincia_id"/>
                                    <field name="ciudad_id"/>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="mostrar_boton_publicar" invisible="1"/>
                                    <field name="mostrar_bot_retirar_public" invisible="1"/>
                                </group>
                                <group>

                                    <field name="modulo_id"/>
                                    <field name="active" readonly="1" widget = "boolean_toggle" />
                                    <field name="if_publicado" readonly="1" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>

                        <page string="Agenda Sugerida">
                            <group>
                                <group>
                                    <field name="fecha_evento"/>
                                    <field name="dia_semana"/>
                                    <field name="lugar"/>
                                </group>
                                <group>
                                    <field name="hora_inicio" widget="float_time"/>
                                    <field name="hora_fin" widget="float_time"/>
                                    <field name="duracion" />
                                </group>
                            </group>
                        </page>

                        <page string="Participación y Formato">
                            <group>
                                <group>
                                    <field name="tipo_evento" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" />

                                    <field name="numero_asistentes"/>
                                    <field name="codigo_vestimenta"/>
                                </group>
                                <group>
                                    <field name="participacion_prefecta" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" />
                                    <field name="tiempo_intervencion" widget="float_time"/>
                                    <field name="prensa"/>
                                    <field name="data_politica"/>
                                </group>
                            </group>
                        </page>

                        <page string="Mesa Técnica">
                            <field name="mesa_tecnica_ids">
                                <tree editable="bottom">
                                    <field name="nombre"/>
                                    <field name="cargo_institucion_id"/>
                                    <field name="contacto"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Logística y Responsables">
                            <group>
                                <group string="Logística Requerida">
                                    <field name="sillas_requeridas"/>
                                    <field name="carpas_requeridas"/>
                                    <field name="responsable_convoy"/>
                                </group>
                                <group string="Responsables por Áreas">
                                    <field name="responsables_avanzada" widget="many2many_tags"/>
                                    <field name="responsable_socializacion"/>
                                    <field name="responsable_mesa_tecnica"/>
                                    <field name="responsable_convocatoria"/>
                                </group>
                            </group>
                        </page>
                        <page string="Autoridades">
                            <field name="autoridades_externa_ids">
                                <tree editable="bottom">
                                    <field name="nombre"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Alertas/Quejas">
                            <field name="alertas_quejas_ids">
                                <tree editable="bottom">
                                    <field name="nombre"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Servicios">
                            <field name="can_edit_services"/>
                             <field name="programa_id"/>
                            <field name="servicio_ids" readonly="not can_edit_services" context="{'default_programa_id': programa_id}">
                                <tree>
                                    <field name="servicio_id"/>
                                    <field name="personal_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol -->
    <record id="view_mz_mz_convoy_tree" model="ir.ui.view">
        <field name="name">mz.convoy.tree</field>
        <field name="model">mz.convoy</field>
        <field name="arch" type="xml">
            <tree string="Programas">
                <field name="name"/>
                <field name="sucursal_id"/>
                <field name="phone"/>
                <field name="servicio_ids"/>
                <field name="autoridades_ids"/>
                <field name="if_publicado"/>
            </tree>
        </field>
    </record>

    <!-- Search view for "model" -->
    <record id="mz_mz_convoy_view_search" model="ir.ui.view">
        <field name="name">mz.convoy.search</field>
        <field name="model">mz.convoy</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="model_search">
                <field name="name" />
                <!-- Panel de búsqueda del lado izquierdo -->
                <searchpanel>
                    <field name="sucursal_id" icon="fa-building" string="Sucursal"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="ma_mz_convoy_view_kanban" model="ir.ui.view">
        <field name="name">mz.convoy</field>
        <field name="model">mz.convoy</field>
        <field name="arch" type="xml">
            <kanban default_order="name" type="object">
                <field name="id"/>
                <field name="name"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-menu">
                        <a role="menuitem" type="open" class="dropdown-item">Configuration</a>
                        <a role="menuitem" type="object" name="toggle_active" class="dropdown-item">
                            <t t-if="record.active.raw_value">Archive</t>
                            <t t-else="">Restore</t>
                        </a>
                        <a role="menuitem" t-if="widget.deletable" type="delete" class="dropdown-item">Delete</a>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="img" t-att-src="kanban_image('mz.convoy', 'image_128', record.id.raw_value)" class="o_image_64_max" height="52"/>
                            </div>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <div>
                                    <span class="fa fa-envelope"/>
                                    <field name="email"/>
                                </div>
                                <div>
                                    <span class="fa fa-phone"/>
                                    <field name="phone"/>
                                </div>
                                <!-- <div>
                                    <field name="model_count_mz"/> SERVICIOS
                                </div> -->
                                <div>
                                    <span class="fa fa-headset"/>
                                    <field name="model_count_mz" invisible="1"/>
                                    <field name="servicios_text"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!-- vista de autoridades  tree - pertenecientre a hr.employee  -->

    <!-- Vista de árbol personalizada para autoridades_ids -->
    <record id="view_autoridades_hr_employee_tree" model="ir.ui.view">
        <field name="name">autoridades.hr.employee.tree</field>
        <field name="model">hr.employee</field>        <!-- Cambia 'res.partner' por el modelo correcto -->
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="department_id"/>
                <field name="job_id"/>
            </tree>
        </field>
    </record>

    <!-- Acción para Cursos -->
    <record id="action_mz_mz_convoy" model="ir.actions.act_window">
        <field name="name">Convoy</field>
        <field name="res_model">mz.convoy</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_modulo_id':4}</field>
    </record>

    <menuitem id="menu_action_mz_mz_convoy" name="Programas" parent="mz_convoy_menu_registro" action="action_mz_mz_convoy" sequence="10"/>

</odoo>

