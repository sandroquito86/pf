<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definir la Categoría del Módulo -->
    <record id="module_category_mz_convoy" model="ir.module.category">
        <field name="name">Convoy</field>
        <field name="description">Categoría para el módulo CONVOY</field>
        <field name="sequence">100</field>
    </record>

    <!-- Definir el Grupo de Acceso para Beneficiarios -->
    <record id="group_mz_convoy_operador" model="res.groups">
        <field name="name">Operador</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
    <record id="group_mz_convoy_prestador_servicio" model="res.groups">
        <field name="name">Prestador de Servicio</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
    <record id="group_mz_convoy_asistente_coordinador" model="res.groups">
        <field name="name">Asistente Coordinador del Convoy</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
    <record id="group_mz_convoy_bodeguero" model="res.groups">
        <field name="name">Bodeguero</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
    <record id="group_mz_convoy_coordinador" model="res.groups">
        <field name="name">Coordinador del Convoy</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
    <record id="group_mz_convoy_administrador" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_mz_convoy"/>
    </record>
</odoo>