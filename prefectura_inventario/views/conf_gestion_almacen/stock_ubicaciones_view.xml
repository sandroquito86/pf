<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Form -->
        <record id="pf_view_location_form" model="ir.ui.view">
            <field name="name">pf.stock.location.form</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <form string="Ubicación">
                    <sheet>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="ej. Zona A"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="programa_id" readonly="1" force_save="1"/>
                                <field name="location_id" domain="[('usage', '!=', 'view')]"/>
                                <field name="usage"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="posx" placeholder="5"/>
                                <field name="posy" placeholder="3"/>
                                <field name="posz" placeholder="1"/>
                                <field name="barcode"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Información Adicional" name="additional_info">
                                <group>
                                    <group>
                                        <field name="comment" placeholder="Observaciones..."/>
                                    </group>
                                    <group>
                                        <field name="scrap_location"/>
                                        <field name="return_location"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Tree -->
        <record id="pf_view_location_tree" model="ir.ui.view">
            <field name="name">pf.stock.location.tree</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <tree string="Ubicaciones">
                    <field name="display_name"/>
                    <field name="programa_id"/>
                    <field name="active" invisible="1"/>
                    <field name="usage"/>
                    <field name="location_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="barcode"/>
                </tree>
            </field>
        </record>

        <!-- Vista Search -->
        <record id="pf_view_location_search" model="ir.ui.view">
            <field name="name">pf.stock.location.search</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <search string="Ubicaciones">
                    <field name="name"/>
                    <field name="programa_id"/>
                    <field name="location_id"/>
                    <field name="barcode"/>
                    <separator/>
                    <filter string="Ubicaciones Internas" name="internal_loc" domain="[('usage', '=', 'internal')]"/>
                    <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Agrupar Por">
                        <filter string="Programa" name="programa" domain="[]" context="{'group_by': 'programa_id'}"/>
                        <filter string="Ubicación Padre" name="location" domain="[]" context="{'group_by': 'location_id'}"/>
                        <filter string="Tipo" name="tipo" domain="[]" context="{'group_by': 'usage'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_pf_location" model="ir.actions.act_window">
            <field name="name">Ubicaciones</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                         (0, 0, {
                                            'view_mode': 'tree', 
                                            'view_id': ref('pf_view_location_tree')
                                         }),
                                         (0, 0, {
                                            'view_mode': 'form', 
                                            'view_id': ref('pf_view_location_form')
                                         })]"/>
            <field name="context" eval="{'filtrar_programa': True}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva ubicación
                </p>
            </field>
        </record>

        <!-- Menú -->
        <menuitem id="menu_pf_location" name="Ubicaciones" parent="mc_conf_gestion_almacen" action="action_pf_location" sequence="20"/>
    </data>
</odoo>