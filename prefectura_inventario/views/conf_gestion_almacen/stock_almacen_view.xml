<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Form -->
        <record id="pf_view_warehouse_form" model="ir.ui.view">
            <field name="name">pf.stock.warehouse.form</field>
            <field name="model">stock.warehouse</field>
            <field name="arch" type="xml">
                <form string="Almacén Manzana de Cuidados">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_all_routes" string="Rutas" icon="fa-refresh" class="oe_stat_button" type="object">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Rutas</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="ej. Almacén Principal MC" class="w-100"/>
                        </h1>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="programa_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                <field name="partner_id"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Configuración de Almacén" name="warehouse_config">
                                <group colspan="4">
                                    <group string="Envíos">
                                        <field name="reception_steps" widget='radio'/>
                                        <field name="delivery_steps" widget='radio'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Información Técnica" name="technical_info" groups="base.group_no_one">
                                <group>
                                    <group string="Ubicaciones">
                                        <field name="lot_stock_id" readonly="1" required="0"/>
                                        <field name="wh_input_stock_loc_id" readonly="1"/>
                                        <field name="wh_output_stock_loc_id" readonly="1"/>
                                    </group>
                                    <group string="Tipos de Operación">
                                        <field name="in_type_id" readonly="1"/>
                                        <field name="out_type_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Tree -->
        <record id="pf_view_warehouse_tree" model="ir.ui.view">
            <field name="name">pf.stock.warehouse.tree</field>
            <field name="model">stock.warehouse</field>
            <field name="arch" type="xml">
                <tree string="Almacenes MC">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="active" column_invisible="True"/>
                    <field name="lot_stock_id"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Vista Search -->
        <record id="pf_warehouse_view_search" model="ir.ui.view">
            <field name="name">pf.stock.warehouse.search</field>
            <field name="model">stock.warehouse</field>
            <field name="arch" type="xml">
                <search string="Almacén">
                    <field name="name"/>
                    <filter string="Archivados" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        <!-- Acción -->
        <record id="action_pf_warehouse" model="ir.actions.act_window">
            <field name="name">Almacenes MC</field>
            <field name="res_model">stock.warehouse</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                 (0, 0, {
                                    'view_mode': 'tree', 
                                    'view_id': ref('pf_view_warehouse_tree')
                                 }),
                                 (0, 0, {
                                    'view_mode': 'form', 
                                    'view_id': ref('pf_view_warehouse_form')
                                 })]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
            Definir un nuevo almacén para Manzana de Cuidados
                </p>
            </field>
            <field name="context" eval="{'filtrar_programa': True}"/>
        </record>


        <menuitem name="Almacenes" id="menu_pg_equipos_grupos" action="action_pf_warehouse" parent="mc_conf_gestion_almacen" sequence="10"/>




    </data>
</odoo>