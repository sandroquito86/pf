<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form -->
    <record id="pf_view_product_template_form" model="ir.ui.view">
        <field name="name">pf.product.template.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre del Producto"/>
                        </h1>
                        <div name="options" groups="base.group_user">
                            <field name="detailed_type" invisible="1"/>
                            <field name="sale_ok" invisible="1"/>
                            <field name="purchase_ok" invisible="1"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="default_code" string="Código Interno"/>
                            <field name="barcode"/>
                            <field name="categ_id"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="uom_po_id" groups="uom.group_uom"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="type" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventario" name="inventory">
                            <group>
                                <group string="Operaciones">
                                    <field name="tracking"/>
                                    <field name="responsible_id"/>
                                </group>                             
                            </group>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="description" placeholder="Describe el producto..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="pf_view_product_template_tree" model="ir.ui.view">
        <field name="name">pf.product.template.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="default_code"/>
                <field name="name"/>
                <field name="categ_id"/>
                <field name="uom_id" groups="uom.group_uom" optional="show"/>
                <field name="standard_price" optional="show"/>
                <field name="qty_available" optional="show"/>
                <field name="responsible_id" optional="hide"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="pf_view_product_template_search" model="ir.ui.view">
        <field name="name">pf.product.template.search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Producto"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <separator/>
                <filter string="En Stock" name="in_stock" domain="[('qty_available', '>', 0)]"/>
                <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Categoría" name="groupby_category" context="{'group_by': 'categ_id'}"/>
                    <filter string="Unidad de Medida" name="groupby_uom" context="{'group_by': 'uom_id'}"/>
                    <filter string="Responsable" name="groupby_responsible" context="{'group_by': 'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_pf_product_template" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                 (0, 0, {
                                    'view_mode': 'tree', 
                                    'view_id': ref('pf_view_product_template_tree')
                                 }),
                                 (0, 0, {
                                    'view_mode': 'form', 
                                    'view_id': ref('pf_view_product_template_form')
                                 })]"/>
        <field name="context" eval="{'search_default_in_stock': 1}"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Crear un nuevo producto
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pf_product_template" name="Productos" action="action_pf_product_template" parent="manzana_de_cuidados.menu_programas" sequence="40"/>
</odoo>