<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="mz_warehouse_form" model="ir.ui.view">
        <field name="name">stock.warehouse.form</field>
        <field name="model">stock.warehouse</field>
        <field name="arch" type="xml">
            <form string="Warehouse">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_all_routes" string="Routes" icon="fa-refresh" class="oe_stat_button" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Routes</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="e.g. Central Warehouse" class="w-100"/>
                    </h1>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                             <field name="programa_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True , 'domain_field': 'domain_programa_id'}" />
                            <field name="code" placeholder="e.g. CW"/>
                            <field name="domain_programa_id" invisible="1" />
                           
                        </group>
                        <group invisible="1">
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" />
                            <field name="partner_id"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="mz_warehouse_tree" model="ir.ui.view">
        <field name="name">stock.warehouse.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="arch" type="xml">
            <tree string="Warehouse">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="programa_id"/>
                <field name="active" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="mz_warehouse_search" model="ir.ui.view">
        <field name="name">stock.warehouse.search</field>
        <field name="model">stock.warehouse</field>
        <field name="arch" type="xml">
            <search string="Warehouse">
                <field name="name"/>
                <field name="programa_id"/>
                <field name="code"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <filter string="Mi Programa" name="mi_programa" domain="[('programa_id','=',context.get('programa_id', False))]"/>
                <group expand="0" string="Group By">
                    <filter string="Programa" name="group_by_programa" context="{'group_by': 'programa_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="mz_warehouse_action" model="ir.actions.act_window">
        <field name="name">Almacenes</field>
        <field name="res_model">stock.warehouse</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mz_warehouse_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mz_warehouse_form')})]"/>
        <field name="search_view_id" ref="mz_warehouse_search"/>
        <field name="context">{'filtrar_programa_almacen': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Definir un nuevo almac√©n
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mz_action_warehouse_form" name="Almacenes" action="mz_warehouse_action" parent="menu_config_gestion_almacen" sequence="1"/>

</odoo>