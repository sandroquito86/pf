        <field name="groups" eval="[(4, ref('group_beneficiario_manager'))]"/>
        <field name="domain_force">[('programa_id.modulo_id', '=', 2)]</field>
    </record>
    <record id="access_beneficiario_manager_to_programa" model="ir.rule">
